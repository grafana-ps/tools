{
  "name": "@grafana-ps/tools",
  "description": "Grafana Cloud tools provided by the Grafana PS team.",
  "version": "0.7.0",
  "author": "Grafana PS",
  "bin": {
    "grot": "./bin/run.js"
  },
  "bugs": "https://github.com/grafana-ps/tools/issues",
  "dependencies": {
    "@grafana-ps/tools": "link:",
    "@oclif/core": "^4.5.2",
    "@oclif/plugin-help": "^6.2.32",
    "@oclif/plugin-plugins": "^5.4.46",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.202.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.202.0",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "@opentelemetry/semantic-conventions": "^1.36.0",
    "@types/lodash": "^4.17.20",
    "jaeger-client": "^3.19.0",
    "lodash": "^4.17.21",
    "node-emoji": "^2.2.0",
    "node-fetch": "^2.7.0",
    "ora": "^8.2.0",
    "prometheus-remote-write": "^0.5.1",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4.1.13",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.19.121",
    "chai": "^4.5.0",
    "eslint": "^9.32.0",
    "eslint-config-oclif": "^6.0.89",
    "eslint-config-prettier": "^10.1.8",
    "mocha": "^10.8.2",
    "oclif": "^4.22.5",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "files": [
    "./bin",
    "./dist",
    "./oclif.manifest.json"
  ],
  "homepage": "https://github.com/grafana-ps/tools",
  "keywords": [
    "oclif"
  ],
  "license": "AGPL-3.0",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "bin": "grot",
    "dirname": "grot",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      }
    }
  },
  "private": false,
  "repository": "grafana-ps/tools",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "pnpm run lint",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md",
    "watch": "nodemon --exec 'pnpm run build && ./bin/run.js'"
  },
  "nodemonConfig": {
    "ext": "ts",
    "verbose": true,
    "watch": [
      "src/**/*"
    ]
  },
  "types": "dist/index.d.ts",
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad"
}
