{
  "name": "@grafana-ps/tools",
  "description": "Grafana Cloud tools provided by the Grafana PS team.",
  "version": "0.11.0",
  "author": "Grafana PS",
  "bin": {
    "grot": "./bin/run.js"
  },
  "bugs": "https://github.com/grafana-ps/tools/issues",
  "dependencies": {
    "@catalystic/json-to-yaml": "^1.0.0",
    "@grafana-ps/tools": "link:",
    "@oclif/core": "^4.5.2",
    "@oclif/plugin-help": "^6.2.32",
    "@oclif/plugin-plugins": "^5.4.46",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.203.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "@opentelemetry/semantic-conventions": "^1.36.0",
    "@types/lodash": "^4.17.20",
    "jaeger-client": "^3.19.0",
    "lodash": "^4.17.21",
    "node-emoji": "^2.2.0",
    "node-fetch": "^3.3.2",
    "ora": "^8.2.0",
    "prometheus-remote-write": "^0.5.1",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4.1.13",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.0",
    "chai": "^5.2.1",
    "eslint": "^9.33.0",
    "eslint-config-oclif": "^6.0.94",
    "eslint-config-prettier": "^10.1.8",
    "mocha": "^11.7.1",
    "oclif": "^4.22.9",
    "shx": "^0.4.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "files": [
    "./bin",
    "./dist",
    "./oclif.manifest.json"
  ],
  "homepage": "https://github.com/grafana-ps/tools",
  "keywords": [
    "oclif"
  ],
  "license": "AGPL-3.0",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "bin": "grot",
    "dirname": "grot",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      }
    }
  },
  "private": false,
  "repository": "grafana-ps/tools",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "pnpm run lint",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md",
    "watch": "nodemon --exec 'pnpm run build && ./bin/run.js'"
  },
  "nodemonConfig": {
    "ext": "ts,js,txt,yaml",
    "verbose": true,
    "watch": [
      "src",
      "/home/grafana"
    ]
  },
  "types": "dist/index.d.ts",
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}
