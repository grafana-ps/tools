{
  "name": "@grafana-ps/tools",
  "description": "Grafana Cloud tools provided by the Grafana PS team.",
  "version": "0.1.1",
  "author": "Grafana PS",
  "bin": {
    "grot": "./bin/run.js"
  },
  "bugs": "https://github.com/grafana-ps/tools/issues",
  "dependencies": {
    "@grafana-ps/tools": "link:",
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5",
    "@types/lodash": "^4.17.19",
    "lodash": "^4.17.21",
    "node-emoji": "^2.2.0",
    "node-fetch": "^3.3.2",
    "prometheus-remote-write": "^0.5.1",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1",
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4",
    "@types/chai": "^4",
    "@types/mocha": "^10",
    "@types/node": "^18",
    "chai": "^4",
    "eslint": "^9",
    "eslint-config-oclif": "^6",
    "eslint-config-prettier": "^10",
    "mocha": "^10",
    "oclif": "^4",
    "shx": "^0.3.3",
    "ts-node": "^10",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "./bin",
    "./dist",
    "./oclif.manifest.json"
  ],
  "homepage": "https://github.com/grafana-ps/tools",
  "keywords": [
    "oclif"
  ],
  "license": "AGPL-3.0",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "bin": "grot",
    "dirname": "grot",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      }
    }
  },
  "private": false,
  "repository": "grafana-ps/tools",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "pnpm run lint",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "types": "dist/index.d.ts",
  "packageManager": "pnpm@10.12.4+sha512.5ea8b0deed94ed68691c9bad4c955492705c5eeb8a87ef86bc62c74a26b037b08ff9570f108b2e4dbd1dd1a9186fea925e527f141c648e85af45631074680184"
}
